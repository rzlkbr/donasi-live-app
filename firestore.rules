rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Izinkan siapapun membaca data groups dan donations
    match /groups/{document} {
      allow read: if true;
      allow write: if request.auth != null; // Hanya user terautentikasi bisa menulis
    }

    match /donations/{document} {
      allow read: if true;
      allow write: if request.auth != null; // Hanya user terautentikasi bisa menulis
    }

    // Rules untuk config collection (target donasi, dll)
    match /config/{document} {
      allow read: if true; // Semua orang bisa baca config
      allow write: if request.auth != null; // Hanya user terautentikasi bisa menulis
    }

    // Aturan lain untuk admin bisa ditambahkan di sini
  }
}